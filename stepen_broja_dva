#include <stdio.h>

int stepen_broja_dva(int n){
    if(n<1) return 0;
    for(;n>1;n/=2){
        if(n%2!=0) return 0; 
    }
    if(n==1) return 1;
}

int main() {
    int n;
    printf("Unesite n: ");
    scanf("%d",&n);
    stepen_broja_dva(n)==1 ? printf("Broj %d je stepen dvojke.",n) :printf("Broj %d nije stepen dvojke.",n);

	return 0;
}

// kreiraj funkciju int stepen_broja_dva(int n) i provjeri je li broj stepen broja 2
